{
  "name": "urNEU",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A Chrome extension that un-fucks myNEU.",
  "homepage_url": "https://github.com/Tiffney/UrNEU",
  
  "permissions": [
    "myneu.neu.edu",
    "my.neu.edu"
  ],
  
  "icons": {
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.js",
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "page_action": {
    "default_icon": "src//options_custom/icon.png",
    "default_title": "page action demo"
  },
  "permissions": [
    "cookies"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://my.neu.edu/*",
        "http://myneu.neu.edu/*"
      ],
      "js": [
        "src/inject/inject.js"
        //"bower_components/angular/angular.min.js
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "html": ["!!! insert angular html here"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "!!! insert angular html here also"
    //bower_components/angular/*" // !!! check that it's the right link
  ]
}
